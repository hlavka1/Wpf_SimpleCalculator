<Window x:Class="Wpf_SimpleCalculator.wnd_DrunkMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SimpleCalculator"
        mc:Ignorable="d"
        Title="wnd_DrunkMessage" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="141" Margin="39,49,0,0" TextWrapping="Wrap" Text="You should not be calculating and drinking.  &#xD;&#xA;Go home and sober up!" VerticalAlignment="Top" Width="704" FontSize="36"/>
        <Image x:Name="Img_Bus" HorizontalAlignment="Left" Height="152" Margin="39,224,0,0" VerticalAlignment="Top" Width="340" Source="images/bus2.PNG"/>
        <Button x:Name="btn_ruin" Content="You ruin all of my fun!" HorizontalAlignment="Left" Height="51" Margin="477,325,0,0" VerticalAlignment="Top" Width="243" Click="btn_ruin_Click" FontSize="18"/>

    </Grid>
</Window>
